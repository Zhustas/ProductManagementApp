<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewModels="clr-namespace:ProductManagementApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProductManagementApp.ProductListView"
			 x:DataType="viewModels:ProductListViewModel">
	<StackPanel>
		<Button Click="OnAddClick">Add</Button>
		<DataGrid ItemsSource="{Binding Products}" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" />
				<DataGridTextColumn Header="Description" Binding="{Binding Description}" />
				<DataGridTextColumn Header="Rating" Binding="{Binding Rating}" />
				<DataGridTextColumn Header="Price" Binding="{Binding Price}" />
				<DataGridTemplateColumn>
					<DataTemplate>
						<DockPanel>
							<Button Click="OnDeleteClick" Grid.RowSpan="2" Grid.Column="2" Classes="del" >
								<Image Source="/Assets/trash.png" Height="20" />
							</Button>
							<Button Click="OnEditClick" Grid.RowSpan="2" Grid.Column="3" Classes="edit">
								<Image Source="/Assets/edit.png" Height="20" />
							</Button>
						</DockPanel>
					</DataTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		
